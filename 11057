#include <iostream>
#include <algorithm>
using namespace std;

int main()
{
	int num;
	cin >> num;
	int count[1001][10] = { 0 };
	for (int i = 0; i < 10; i++) {
		count[1][i] = 1;
	}
	int result[1001] = { 0 };
	result[1] = 10;
	for (int i = 2; i <= num; i++) {
		for (int j = 0; j < 10; j++) {
			int n = j;
			while (n < 10) {
				count[i][j] += count[i - 1][n];
				n++;
			}
			count[i][j] %= 10007;
			result[i] += count[i][j];
		}
		result[i] %= 10007;
	}
	cout << result[num] << endl;
	return 0;
}
